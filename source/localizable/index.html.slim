/! Begin Skills
section#skills.page-type.depth-type
  .container
    .row
      .col-xs-12.text-center
        h1.section-title = t('skills.title')
    .row
      .col-xs-12.col-md-8.col-md-offset-2.text-center
        p = t('skills.description')
    .row.text-center
      - delay = 0.3
      - data.skills.each do |skill|
        .col-xs-12.col-sm-6.col-md-3
          .skill.clearfix.animated.delayed.no-opacity data-animation="bounceIn" data-animation-delay="#{delay}s" 
            .shape.diamond.center
              = image_tag "/images/bg/#{skill.image}"
            h3.skill-title = skill.title
            p.text-center.tagcloud
              - skill.tags.each do |tag|
                a = tag
                br /
        - delay = delay + 0.2
    .row
      .col-xs-12.col-md-6
      .col-xs-12.col-md-6
        .project-content
          - data.skills_levels.each do |skill_level|
            p.skill = skill_level.title
            .progress
              .progress-bar.animated.delayed.no-opacity data-animation="slideInLeft" data-animation-delay="0.2s" style=("width: #{skill_level.percentage}%;") 
  /! special depth bg
  .depth-bg
    /! special depth image
    .depth-img.frame-mac.animated.delayed.no-opacity data-animation="ts-slideInUp" data-animation-delay="1.2s" style=("background: url(/images/bg/bg-frame3.jpg);") 
    /! background overlay image (e.g. a transparant triangle)
    .depth-bg-img style=("background-image: url(/images/bg/skills-bg.png);") 
  /! end special depth bg
/! End Skills

/! Begin Works
section#works.page-type.grey-bg
  .container
    .row
      .col-xs-12
        h1.section-title.text-center = t('works.title')
        /! diamond slider navigation
        #diamond-filter-portfolio.diamond-filter.animated.delayed.no-opacity data-animation="fadeInDown" data-animation-delay="0.3s" 
          ul.special-font
            li.active
              a data-filter="*" href="#"  = t('works.all')
            - datas_categories = I18n.locale == :en ? data.categories.en : data.categories.fr
            - datas_categories.each do |category|
              li
                a data-filter=category.id href="#" = category.title
        /! diamond slider
        #diamondslider-portfolio.diamondslider.nav-white.animated.delayed.no-opacity data-animation="fadeInUp" data-animation-delay="1.1s" 
          ul.slides
            - data.works.each do |work|
              li.shape.diamond data-category=work.category
                a.item-hover.ajax-nav href=work.url target="_blank"
                  span.hover-title.special-font= work.title
                  span.hover-action - #{t('works.see')} -
                img src="/images/works/#{work.image}" /
    .row
      .col-xs-12
        h1.section-title.text-center = t('works.ineat_title')
        /! diamond slider navigation
        #diamond-filter-portfolio-ineat.diamond-filter.animated.delayed.no-opacity data-animation="fadeInDown" data-animation-delay="0.3s" 
          ul.special-font
            li.active
              a data-filter="*" href="#"  = t('works.all')
            - datas_categories_ineat = I18n.locale == :en ? data.categories_ineat.en : data.categories_ineat.fr
            - datas_categories_ineat.each do |category|
              li
                a data-filter=category.id href="#" = category.title
        /! diamond slider
        #diamondslider-portfolio-ineat.diamondslider.nav-white.animated.delayed.no-opacity data-animation="fadeInUp" data-animation-delay="1.1s" 
          ul.slides
            - data.works_ineat.each do |work|
              li.shape.diamond data-category=work.category
                a.item-hover.ajax-nav href=work.url target="_blank"
                  span.hover-title.special-font= work.title
                  span.hover-action - #{t('works.see')} -
                img src="/images/works/#{work.image}" /
/! End Works

/! Begin Contact
section#contact.page-type.black-bg.font-white
  .container
    .row.text-center
      .col-xs-12
        h1.section-title = t('contact.title')
    .row
      .col-xs-12.col-sm-6.col-md-5
        p.desc
          = t('contact.description')
        h3.top-margin-60 = t('follow_me')
        p.bottom-margin-60
          - delay = 0.3
          - data.social.each do |social|
            a.btn.btn-icon.btn-icon-white.animated.delayed.no-opacity data-animation="fadeIn" data-animation-delay="#{delay}s" href=social.url target="_blank" title=social.title 
              i.fontello class="social_icon-#{social.icon}"
            - delay = delay + 0.3
      .col-xs-12.col-sm-5.col-sm-offset-1.col-md-5.col-md-offset-2
        .contact-form
          form.form.form-horizontal accept-charset="UTF-8" action="https://formkeep.com/f/410d666b42cd" method="POST"
            fieldset
              input type="hidden" name="utf8" value="✓" /
              input#contact_name.form-control.form-dark name="contact[name]" placeholder=("#{t('contact.form.name')} *") required="required" type="text" /
              input#contact_email.form-control.form-dark name="contact[email]" placeholder=("#{t('contact.form.email')} *") required="required" type="email" /
              input#contact_subject.form-control.form-dark name="contact[subject]" placeholder=("#{t('contact.form.subject')} *") required="required" type="text" /
              textarea#contact_body.form-control.form-dark name="contact[body]" placeholder=("#{t('contact.form.message')} *") required="required" rows="6" 
              input#submit.btn.btn-border.border-white type="submit" value=t('contact.form.send') /
              .loading
/! End Contact
